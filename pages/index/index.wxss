page{
  background: linear-gradient(#20ccaf, #9198e5);
}
.topNav{
  width: 60%;
display: flex;
}
.navTab{
  width: 25%;
  font-size: 32rpx;
  padding: 10rpx 0 20rpx 30rpx;
  color: #ffffff;
}
.navTab-active{
  font-size: 40rpx;
  font-weight:bold ;
  padding: 0rpx 0 10rpx 30rpx;
  position: relative;
}
.navTab-active::before{
   content: "";
   width: 25%;
   height: 8rpx;
   background-color: #ffffff;
   position: absolute;
   bottom: 0;
   border-radius: 40%;
   left: 50%;
}