/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 50rpx;
}
.user-motto{
  font-family:cursive;
  font-size: 56rpx;
  background: linear-gradient(to right, rgb(252, 59, 0), blue);
  -webkit-background-clip: text;
   color: transparent;
}
.gohome{
  margin: 80rpx auto 0;
  padding: 20rpx 40rpx;
  border: 1rpx solid rgb(60, 49, 121);
  border-radius: 50rpx;
  font-family:cursive;
  font-size: 44rpx;
  background: linear-gradient(to right, rgb(51, 57, 109), rgb(212, 0, 255));
  -webkit-background-clip: text;
   color: transparent;
}